programa {
  funcao inicio() {

    inteiro nota1, nota2, nota3, nota4, soma
    real media

    escreva ("Insira suas 4 notas do bimestre: ")
    leia (nota1)
    leia (nota2)
    leia (nota3)
    leia (nota4)

    soma = nota1 + nota2 + nota3 + nota4 
    media = soma / 4

    escreva ("A média das notas é: " + media)
    
  }
}
